doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title Library App -- #{title}
        link(rel="stylesheet" href='/bower_components/bootstrap/dist/css/bootstrap.css')
        style.
            #home {
            font-family: "Comic Sans MS", cursive, sans-serif;
            font-size: 70px;
            letter-spacing: -2px;
            word-spacing: 3px;
            color: #1C80FF;
            font-weight: normal;
            text-decoration: none solid rgb(68, 68, 68);
            font-style: italic;
            font-variant: small-caps;
            text-transform: capitalize;
            }
            .tg  {table-layout: fixed;width: 100%;}
            .tg td{background-color:#e8edff;color:#669;font-family:Arial, sans-serif;font-size:14px;overflow:hidden;padding:10px 5px;word-break:normal;}
            .tg th{background-color:#b9c9fe;color:#039;font-family:Arial, sans-serif;font-size:14px;font-weight:normal;overflow:hidden;padding:10px 5px;word-break:normal;}
            .tg .tg-lboi{text-align:center;vertical-align:middle}
            .tg .tg-0pky{text-align:center;vertical-align:middle}
            .myButton {box-shadow: 7px 6px 10px -6px #71ff4a;background:linear-gradient(to bottom, #44c767 5%, #5cbf2a 100%);background-color:#44c767;border-radius:6px;display:inline-block;cursor:pointer;color:#ffffff;font-family:Georgia;font-size:12px;font-weight:bold;padding:8px 20px;text-decoration:none;text-shadow:2px 2px 2px #34752a;}
            .myButton:hover {background:linear-gradient(to bottom, #5cbf2a 5%, #44c767 100%);background-color:#5cbf2a;}
            .myButton:active {position:relative;top:1px;}
            .delete {box-shadow: 7px 6px 10px -6px #ff4c4c;background:linear-gradient(to bottom, #c74545 5%, #bd2a2a 100%);background-color:#c74545;border-radius:6px;display:inline-block;cursor:pointer;color:#ffffff;font-family:Georgia;font-size:12px;font-weight:bold;padding:8px 20px;text-decoration:none;text-shadow:2px 2px 2px #732929;}
            .delete:hover {background:linear-gradient(to bottom, #bd2a2a 5%, #c74545 100%);background-color:#bd2a2a;}
            .delete:active {position:relative;top:1px;}
    
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light(style="padding:1%;")
            .container-fluid
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                a.navbar-brand(style="color: #1C80FF;") Library
                #navbarTogglerDemo03.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        li.nav-item
                            a.nav-link(href="/") Home
                        li.nav-item
                            a.nav-link(href="/books") Books
                        li.nav-item
                            a.nav-link(href="/addbook") Add Book
                        //- li.nav-item
                        //-     a.nav-link(href="/editbook") Edit Book
        block content
        hr